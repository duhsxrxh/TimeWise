<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/showPopUpLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:scrollbarThumbHorizontal="@color/darkGreen"
    android:scrollbarThumbVertical="@color/darkGreen"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/btnCreateNewCategory"
        android:layout_width="262dp"
        android:layout_height="51dp"
        android:background="@drawable/rounded_btn_view"
        android:fontFamily="@font/poppins"
        android:text="Create"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/createACategoryBackground"
        app:layout_constraintEnd_toEndOf="@+id/createACategoryBackground"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toStartOf="@+id/createACategoryBackground"
        app:layout_constraintTop_toBottomOf="@+id/txtCreateNewCategory"
        app:layout_constraintVertical_bias="0.294" />

    <ImageView
        android:id="@+id/createACategoryBackground"
        android:layout_width="320dp"
        android:layout_height="276dp"
        android:backgroundTint="#000000"
        android:foregroundGravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pop_up_background" />
    <TextView
        android:id="@+id/textView"
        android:layout_width="284dp"
        android:layout_height="62dp"
        android:layout_marginTop="44dp"
        android:fontFamily="@font/poppins"
        android:text="Create a Category"
        android:textAlignment="center"
        android:textColor="@color/darkGreen"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/createACategoryBackground"
        app:layout_constraintStart_toStartOf="@+id/createACategoryBackground"
        app:layout_constraintTop_toTopOf="@+id/createACategoryBackground" />

    <EditText
        android:id="@+id/txtCreateNewCategory"
        android:layout_width="252dp"
        android:layout_height="44dp"
        android:layout_marginBottom="104dp"
        android:background="@drawable/pop_up_text_background"
        android:ems="10"
        android:hint="Category Name"
        android:inputType="text"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/createACategoryBackground"
        app:layout_constraintEnd_toEndOf="@+id/createACategoryBackground"
        app:layout_constraintStart_toStartOf="@+id/createACategoryBackground"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>